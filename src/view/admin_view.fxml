<BorderPane fx:controller="controller.AdminController" xmlns:fx="http://javafx.com/fxml" >
    <top>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Movies">
	                <content>
		                <GridPane>
			                <children>
				                <Label text="Movies"  GridPane.columnIndex="0" GridPane.rowIndex="0" >
					                <font>
			               				<Font name="System Bold" size="18.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
									   </padding>
				                </Label>
				                <VBox spacing="5">
				                   <padding>
								      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
								   </padding>
				                <children>
				                </children>
				                <HBox spacing="5">
				                   <padding>
								      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
								   </padding>
				                <children>
				                <Button fx:id="delete_movie" text="Delete Movie" onAction="#deleteMovie"> </Button>
				                </children>
				                </HBox>
				                 <TableView fx:id="movies_table" layoutY="-2.0" prefHeight="550.0" maxWidth="300" prefWidth="300.0"  GridPane.columnIndex="0" GridPane.rowIndex="2">
							       <columns>
							           <TableColumn fx:id="movie_name" maxWidth="200.0" minWidth="50.0" prefWidth="200.0" text=" Movie ">
							           <cellValueFactory> <PropertyValueFactory property="name" />
										</cellValueFactory>
										</TableColumn>
							           <TableColumn fx:id="movie_rating" maxWidth="100.0" minWidth="50.0" prefWidth="100.0" text=" Rating "> 
							           <cellValueFactory><PropertyValueFactory property="rating" />
										</cellValueFactory>
										</TableColumn>
							   		</columns>
							   </TableView>
							   	</VBox>
							   	<VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
							   	<Label fx:id="cinemas_playing_label" text="">
					                <font>
			               				<Font name="System Bold" size="18.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
									   </padding>
				                </Label>
							   	<TextArea fx:id="movies_textarea" prefWidth="300" prefHeight="400.0" >
			             		<padding>
			                 		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			             		</padding>
			             		
			             	</TextArea>
			             		<Label  text="Add Movie">
					                <font>
			               				<Font name="System Bold" size="16.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									   </padding>
				                </Label>
			             		<HBox spacing="5">
			             		<Label text="Movie Name"></Label><TextField fx:id="add_name_field"></TextField><Label text="  Rating" prefWidth="50"></Label><ComboBox fx:id="add_rating_field"></ComboBox><Button text="Add Movie" onAction="#addMovie"></Button>
			             		</HBox>
			             		<Label fx:id="status_label_movie"> </Label>
			             		
			             	</VBox>
				            </children>
			            </GridPane>
	                </content>
	                </Tab>
                <Tab text="Cinemas">
                	<content>
 			                <GridPane>
			                <children>
				                <Label text="Cinemas"  GridPane.columnIndex="0" GridPane.rowIndex="0" >
					                <font>
			               				<Font name="System Bold" size="18.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
									   </padding>
				                </Label>
				                <VBox spacing="5">
				                   <padding>
								      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
								   </padding>
				                <children>
				                </children>
				                <HBox spacing="5">
				                   <padding>
								      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
								   </padding>
				                <children>
				                <Button fx:id="delete_cinema" text="Delete Cinema" onAction="#deleteCinema"> </Button>
				                </children>
				                </HBox>
				                 <TableView fx:id="cinemas_table" layoutY="-2.0" prefHeight="550.0" maxWidth="300" prefWidth="300.0"  GridPane.columnIndex="0" GridPane.rowIndex="2">
							       <columns>
							           <TableColumn fx:id="cinema_name" maxWidth="200.0" minWidth="50.0" prefWidth="200.0" text=" Cinema ">
							           <cellValueFactory> <PropertyValueFactory property="name" />
										</cellValueFactory>
										</TableColumn>
							           <TableColumn fx:id="cinema_x" maxWidth="100.0" minWidth="50.0" prefWidth="50.0" text=" X "> 
							           <cellValueFactory><PropertyValueFactory property="x" />
										</cellValueFactory>
										</TableColumn>
										<TableColumn fx:id="cinema_y" maxWidth="100.0" minWidth="50.0" prefWidth="50.0" text=" Y "> 
							           <cellValueFactory><PropertyValueFactory property="y" />
										</cellValueFactory>
										</TableColumn>
							   		</columns>
							   </TableView>
							   	</VBox>
							   		<VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
							   	<Label fx:id="movies_showing_label" text="">
					                <font>
			               				<Font name="System Bold" size="18.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
									   </padding>
				                </Label>
							   	<TextArea fx:id="cinemas_textarea" prefWidth="300" prefHeight="400.0" >
			             		<padding>
			                 		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			             		</padding>
			             	</TextArea>
			             		<Label  text="Add Cinema">
					                <font>
			               				<Font name="System Bold" size="16.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									   </padding>
				                </Label>
			             		<HBox spacing="5">
			             	
			             		<Label text="Cinema Name"></Label><TextField fx:id="add_cinema_name_field"></TextField><Label text="  X"></Label><TextField fx:id="add_x_field" prefWidth="50"></TextField><Label text="  Y"></Label><TextField fx:id="add_y_field" prefWidth="50"></TextField><Button text="Add Cinema" onAction="#addCinema"></Button>
			             		</HBox>
			             		<Label  text="Add Showtime">
					                <font>
			               				<Font name="System Bold" size="16.0"/>
			           				</font>
				           				<padding>
									      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
									   </padding>
				                </Label>
			             		<HBox spacing="5">
			             	
			             		<Label text="Cinema"></Label><TextField fx:id="add_showtime_cinema_field"></TextField><Label text="  Time"></Label><ComboBox fx:id="add_showtime_time_field"></ComboBox><Button text="Add Showtime" onAction="#addShowtime"></Button>
			             		</HBox>
			             		<HBox spacing="5">
								<Label text="  Movie"></Label><TextField fx:id="add_showtime_movie_field"></TextField>	             		
								</HBox>
								<Label fx:id="status_label"> </Label>
			             	</VBox>
				            </children>
			            </GridPane>
                	</content>
                </Tab>
            </tabs>
        </TabPane>
    </top>
</BorderPane>
